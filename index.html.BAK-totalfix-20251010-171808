<script>
document.addEventListener('DOMContentLoaded', function(){
  var header = document.querySelector('header') || document.querySelector('.site-header');
  var pkg = document.getElementById('packages');
  var cnt = document.getElementById('contact');
  if (header && pkg) header.insertAdjacentElement('afterend', pkg);
  if (pkg && cnt) pkg.insertAdjacentElement('afterend', cnt);
});
</script>
