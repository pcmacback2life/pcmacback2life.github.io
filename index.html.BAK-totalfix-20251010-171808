<script id="marquee-under-logo">
document.addEventListener('DOMContentLoaded', function(){
  const anchor = document.getElementById('logo-after-anchor');
  const logo   = document.querySelector('header img.site-logo');
  if(!anchor || !logo) return;

  // Find the *current* screenshot group (wherever it is)
  if(!currentStrip) return;

  // Collect the current images
  const imgs = Array.from(currentStrip.querySelectorAll('img'));
  if(!imgs.length) return;

  // Build a clean strip inside the anchor (seamless loop by duplicating once)
  const marquee= document.createElement('div');    marquee.className = 'marquee';
  const track  = document.createElement('div');    track.className   = 'track';

  const cloneSet = () => imgs.map(img => {
    const c = document.createElement('img');
    c.src = img.getAttribute('src'); c.alt = img.getAttribute('alt') || '';
    return c;
  });
  [...cloneSet(), ...cloneSet()].forEach(n => track.appendChild(n));
  marquee.appendChild(track); strip.appendChild(marquee);

  // Place the strip *right after the logo* via the anchor
  anchor.replaceChildren(strip);

  // Remove the old location
  if (currentStrip !== strip) currentStrip.remove();
});
</script>
    display:flex; gap:12px; align-items:center;
  }
    height:118px !important; width:auto !important;
    border-radius:10px; box-shadow:0 6px 18px rgba(0,0,0,.30);
  }
    from{transform:translateX(0)} to{transform:translateX(-50%)}
  }
</style>
  header{display:flex;flex-direction:column;align-items:flex-start;gap:8px}
</style>
