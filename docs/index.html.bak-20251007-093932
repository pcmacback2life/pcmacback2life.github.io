    <!-- Lightbox -->
    <div id="viewer" role="dialog" aria-modal="true" aria-label="Image viewer">
      <button id="viewerClose" class="close">✕ Close</button>
      <img id="viewerImg" src="" alt="Large screenshot">
    </div>
    <script>
      (function(){
        const v=document.getElementById('viewer'), img=document.getElementById('viewerImg'), close=document.getElementById('viewerClose');
        document.querySelectorAll('#screens [data-full]').forEach(a=>{
          a.addEventListener('click', e=>{e.preventDefault(); img.src=a.getAttribute('data-full'); v.style.display='flex'; document.body.style.overflow='hidden';});
        });
        function hide(){ v.style.display='none'; img.src=''; document.body.style.overflow=''; }
        close.addEventListener('click', hide);
        v.addEventListener('click', e=>{ if(e.target===v) hide(); });
        window.addEventListener('keydown', e=>{ if(e.key==='Escape') hide(); });
      })();
    </script>
