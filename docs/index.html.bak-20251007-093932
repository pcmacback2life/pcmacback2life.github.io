<script id="remove-old-screenshot-grid">
(function(){
  var anchor = document.getElementById('after-logo-anchor');
  if (!anchor) return;
  var el = anchor.nextElementSibling;
  while (el) {
    // stop before footer just in case
    if (/^footer$/i.test(el.tagName)) break;

    var count = el.querySelectorAll('img[src*="screenshots/"]').length;
    if (count >= 3) { el.remove(); break; }

    el = el.nextElementSibling;
  }
})();
</script>
<script id="kill-legacy-screenshot-grid">
(function(){
  try{
    // Collect all host-page images that reference /screenshots/
    var shots = Array.from(document.querySelectorAll('img')).filter(function(img){
      var s = (img.currentSrc || img.src || '');
      return /\/screenshots\//.test(s);
    });
    if (!shots.length) return;

    // Score ancestors to find the biggest container holding those images
    var counts = new Map();
    function bump(n){ if(n && n.nodeType===1) counts.set(n, (counts.get(n)||0)+1); }

    shots.forEach(function(img){
      var n = img;
      for (var depth=0; depth<8 && (n = n.parentElement); depth++){
        // Don’t climb into/through the iframe or the embedded strip
        if (n.id === 'screenshots-strip' || n.classList.contains('screenshots-strip')) break;
        if (n.tagName === 'IFRAME') break;
        bump(n);
      }
    });

    // Pick the max-count element (must contain at least 3 screenshots)
    var target=null, max=0;
    counts.forEach(function(cnt, node){
      if (cnt>=3 && !node.closest('#screenshots-strip')) {
        if (cnt > max) { max = cnt; target = node; }
      }
    });
    if (!target) return;

    // Remove the nearest sensible container around it to avoid leftover spacing
    var rm = target.closest('section, .gallery, .gallery-grid, #screenshots, .marquee, div') || target;
    rm.remove();
  }catch(e){}
})();
</script>
<script id="hide-legacy-header-logo">
document.addEventListener('DOMContentLoaded',function(){
  try{
    var hero = document.getElementById('hero-logo');
    if(!hero) return;
    var imgs = Array.prototype.slice.call(document.images);
    for(var i=0;i<imgs.length;i++){
      var im = imgs[i];
      if(im===hero) continue;
      var src = (im.currentSrc || im.src || '').toLowerCase();
      if(/assets\/logo\.png/i.test(src)) continue;        // your new logo
      if(/\/screenshots\//i.test(src)) continue;          // gallery thumbs
      // is im BEFORE hero?
      if((hero.compareDocumentPosition(im) & Node.DOCUMENT_POSITION_FOLLOWING) === 0) continue;

      // Try to hide a sensible wrapper; else hide the img
      var node = im, steps = 0;
      while(node && node.tagName !== 'BODY' && steps++ < 6){
        if(/^(A|PICTURE|FIGURE|DIV|SPAN|HEADER)$/i.test(node.tagName) &&
           node.querySelectorAll('img').length <= 2){
          node.style.display = 'none';
          return;
        }
        node = node.parentElement;
      }
      im.style.display = 'none';
      return;
    }
  }catch(e){}
});
</script>
<script id="fix-logos-and-button">
document.addEventListener('DOMContentLoaded', function(){
  try{
    var hero = document.getElementById('hero-logo');
    if(!hero) return;

    // A) Remove ANY image before the hero (except gallery thumbs)
    var imgs = Array.prototype.slice.call(document.querySelectorAll('img'));
    for (var i=0;i<imgs.length;i++){
      var img = imgs[i];
      if (img === hero) break; // stop at the keeper
      var src = (img.currentSrc || img.src || '').toLowerCase();
      if (src.indexOf('/screenshots/') !== -1) continue;
      var wrap = img.closest('a,picture,figure,header,div,section') || img;
      if (wrap && wrap.parentNode) wrap.parentNode.removeChild(wrap);
    }

    // B) Between hero and scroller: remove any duplicates of the hero's src
    var herosrc = (hero.currentSrc || hero.src || '').toLowerCase();
    var scroller = document.getElementById('screenshots-strip');
    imgs = Array.prototype.slice.call(document.querySelectorAll('img'));
    for (i=0;i<imgs.length;i++){
      var im = imgs[i];
      if (im === hero) continue;
      var s = (im.currentSrc || im.src || '').toLowerCase();
      if (!s) continue;
      // only consider items after hero but before scroller
      var afterHero = !!(hero.compareDocumentPosition(im) & Node.DOCUMENT_POSITION_FOLLOWING);
      var beforeScroller = !scroller || !!(im.compareDocumentPosition(scroller) & Node.DOCUMENT_POSITION_PRECEDING);
      if (afterHero && beforeScroller && s === herosrc){
        var w2 = im.closest('a,picture,figure,header,div,section') || im;
        if (w2 && w2.parentNode) w2.parentNode.removeChild(w2);
      }
    }

    // C) Keep only ONE Tech Support button, place it right under the hero
    var btns = Array.prototype.slice.call(document.querySelectorAll('#btn-tech-support'));
    if (btns.length){
      // remove duplicates
      for (i=1;i<btns.length;i++){
        var w3 = btns[i].closest('.btn-support-wrap') || btns[i];
        if (w3 && w3.parentNode) w3.parentNode.removeChild(w3);
      }
      var btn = btns[0];
      var wrap = btn.closest('.btn-support-wrap') || btn;
      // move it to directly after the hero if it isn't there already
      if (hero.parentNode && hero.nextSibling !== wrap){
        hero.parentNode.insertBefore(wrap, hero.nextSibling);
      }
      // make sure it’s centered and visible
      wrap.style.cssText = 'width:100%;display:flex;justify-content:center;margin:12px 0 18px;';
      btn.style.cssText += ';display:inline-block;text-align:center;';
    }
  }catch(e){}
});
</script>

